                    <Image Margin="2" Source="{Binding Image20}" Height="80" />

                </WrapPanel>
            </Border>

            <Grid Margin="10,3,10,3" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="50*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="50*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <!--<Border Margin="0,5,10,0" Grid.Row="0" VerticalAlignment="Top" BorderBrush="Silver" BorderThickness="1" >
                        <HyperlinkButton commands:Click.Command="{Binding StockCommand}" HorizontalContentAlignment="Center" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="60" Width="68" Content="Stock" FontWeight="Bold" FontSize="12" Foreground="Black">
                            <HyperlinkButton.Background>
                                <ImageBrush ImageSource="/Smith.Home;component/Images/message.jpg" />
                            </HyperlinkButton.Background>
                        </HyperlinkButton>
                    </Border>-->
                    
                    <StackPanel Margin="5,5,30,0" Grid.Row="0" Grid.Column="1" >
                        <TextBlock TextWrapping="Wrap">Stock module is rich with functionalities that enables authorised users to manage the entire store with ease. Users are allowed to perform the following functions:</TextBlock>
                        <TextBlock Margin="20,5,0,0" TextWrapping="Wrap">1. Basic stock setup.</TextBlock>
                        <TextBlock Margin="20,0,0,0" TextWrapping="Wrap">2. Register purchased stock.</TextBlock>
                        <TextBlock Margin="20,0,0,0" TextWrapping="Wrap">3. Arranging stocks on shelve.</TextBlock>
                        <TextBlock Margin="20,0,0,0" TextWrapping="Wrap">4. Sell stock, and much more...</TextBlock>

                    </StackPanel>

                    <!--<Border Margin="0,20,10,0" VerticalAlignment="Top" BorderBrush="Silver" BorderThickness="1" Grid.Row="1" >
